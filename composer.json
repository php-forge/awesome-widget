{
    "name": "php-forge/awesome-widget",
    "type": "library",
    "description": "Foundation classes and components used by Awesome Widget.",
    "keywords": [
        "php-forge",
        "awesome-widget"
    ],
    "license": "mit",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "maglnet/composer-require-checker": "^4.3",
        "php-forge/html": "^1.0@dev",
        "php-forge/support": "^1.0@dev",
        "phpunit/phpunit": "^10.0",
        "roave/infection-static-analysis-plugin": "^1.30",
        "vimeo/psalm": "^5.6"
    },
    "autoload": {
        "psr-4": {
            "PHPForge\\Widget\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PHPForge\\Widget\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true
        }
    },
    "scripts": {
        "check-dependencies": "composer-require-checker",
        "mutation": "roave-infection-static-analysis-plugin",
        "psalm": "psalm",
        "test": "phpunit"
    }
}
