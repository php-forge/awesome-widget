{
    "name": "forge/widget",
    "type": "library",
    "description": "Widget para PHP.",
    "keywords": [
        "php",
        "widget"
    ],
    "license": "BSD-4-Clause",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.0",
        "forge/html": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "roave/infection-static-analysis-plugin": "^1.8",
        "vimeo/psalm": "^4.23"
    },
    "autoload": {
        "psr-4": {
            "Forge\\Widget\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Forge\\Widget\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true
        }
    }
}
